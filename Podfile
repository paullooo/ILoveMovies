# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'ILoveMovies' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  #request and mapping
  pod 'Alamofire'
  pod 'AlamofireObjectMapper'
  pod 'RealmSwift'
  pod 'ObjectMapper'
  #clean code
  pod 'SwiftLint', '~> 0.27'
  
  pod 'SwiftMessages'
  pod 'Kingfisher'
  # Pods for ILoveMovies
  target 'ILoveMoviesTests' do
    inherit! :search_paths
    # Pods for testing
  end
  target 'ILoveMoviesUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
